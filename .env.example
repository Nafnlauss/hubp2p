# ----------------------------------------
# Supabase Configuration
# ----------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ----------------------------------------
# Proteo KYC API (Verificação de Identidade)
# ----------------------------------------
PROTEO_API_KEY=your_proteo_api_key_here
PROTEO_WEBHOOK_SECRET=your_proteo_webhook_secret_here
# URL do iframe de KYC da Proteo (o CPF do usuário será adicionado automaticamente como &document=)
NEXT_PUBLIC_PROTEO_KYC_URL=https://onboarding.proteo.com.br/?tenant=dias_marketplace&background_check_id=3c35bb87-0b04-4130-a026-e4ee9f8ce2c4&document=00000000000

# ----------------------------------------
# Pushover (Notificações para Operadores)
# Notificações prioritárias (Emergency Priority) quando cliente cria transação PIX
# ----------------------------------------
PUSHOVER_APP_TOKEN=your_pushover_app_token_here
PUSHOVER_USER_KEY=your_pushover_user_key_here

# ----------------------------------------
# Dados Bancários para PIX/TED
# ----------------------------------------
PIX_KEY=your_pix_key_here
BANK_NAME=Nome do Banco
BANK_ACCOUNT_HOLDER=Titular da Conta
BANK_ACCOUNT_NUMBER=12345-6
BANK_ACCOUNT_AGENCY=1234

# ----------------------------------------
# Segurança
# ----------------------------------------
JWT_SECRET=generate_a_random_secret_min_32_characters
CRON_SECRET=generate_a_random_secret_for_cron_jobs

# ----------------------------------------
# CORS (Origens Permitidas)
# ----------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# ----------------------------------------
# Rate Limiting (Upstash Redis) - Opcional
# ----------------------------------------
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# ----------------------------------------
# Next.js
# ----------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------
# Configurações de Transação
# ----------------------------------------
TRANSACTION_EXPIRY_MINUTES=40
